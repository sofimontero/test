<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="helloDialog"
      title="Hello {/recipient/name}">
      <content>
         <core:Icon id="Icon"
            src="sap-icon://hello-world"
            size="8rem"
            class="sapUiMediumMargin"/>
      </content>
      <Button id="CloseDialog"
         text="{i18n>dialogCloseButtonText}"
         press=".onCloseDialog"/>
   </Dialog>
</core:FragmentDefinition>